{
  "name": "@jitbug/helpers",
  "version": "1.0.2",
  "description": "Helpers for Jitbug's Ionic + Stencil PWAs.",
  "type": "module",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "jest",
    "clean": "rm -r arrays dates fp ionic strings time utils index.d.ts index.js",
    "release": "npm test && npm run clean && npm run build && standard-version --infile=changelog.md"
  },
  "author": "Jitbug Ltd",
  "repository": "jitbug/helpers",
  "license": "MIT",
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "/arrays",
    "/dates",
    "/fp",
    "/ionic",
    "/strings",
    "/time",
    "/utils",
    "/index.d.ts",
    "/index.js"
  ],
  "devDependencies": {
    "@ionic/core": "^5.0.7",
    "@types/jest": "^25.1.4",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^13.9.8",
    "@types/nprogress": "^0.2.0",
    "jest": "^25.2.4",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "nprogress": "^0.2.0",
    "prettier": "^2.0.2",
    "prettier-plugin-organize-imports": "^1.0.3",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.3.0",
    "typescript": "^3.8.2"
  },
  "peerDependencies": {
    "@ionic/core": ">=4.x",
    "moment": ">=2.x",
    "moment-timezone": ">=0.x",
    "nprogress": ">=0.x",
    "typescript": ">=3.x"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": true,
    "trailingComma": "all",
    "bracketSpacing": true
  }
}
