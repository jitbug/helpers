{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": true,
		"outDir": ".",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": ["dom", "es2017"],
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strict": true,
		"rootDir": "src",
		"baseUrl": "."
	},
	"include": ["src"],
	"exclude": ["**/*.spec.ts"]
}
