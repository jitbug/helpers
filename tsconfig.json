{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": true,
		"outDir": ".",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": ["dom", "es2017"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strict": true,
		"rootDir": "src",
		"baseUrl": "."
	},
	"ts-jest": {
		"useESM": true
	  },
	"include": ["src"],
	"exclude": []
}